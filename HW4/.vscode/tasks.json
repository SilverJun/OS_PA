{
	"version": "2.0.0",
	"echoCommand": true,
	"tasks": [
		{
			"type": "shell",
			"label": "gcc build active file",
			"command": "gcc",
			"args": [
				"-g",
				"ddchck.c",
				// "-pthread",
				"-o",
				"ddchck"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}